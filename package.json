{
  "name": "digitalkin-aapi",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "description": "DigitalKin agent API",
  "license": "UNLICENSED",
  "scripts": {
    "start": "node bin/server.js",
    "build": "node ace build",
    "dev": "node ace serve --hmr",
    "test": "npm run lint && npm run typecheck && npm run build",
    "test:unit": "node ace test",
    "lint": "eslint .",
    "format": "prettier --write .",
    "typecheck": "tsc --noEmit"
  },
  "imports": {
    "#controllers/*": "./app/controllers/*.js",
    "#exceptions/*": "./app/exceptions/*.js",
    "#repositories/*": "./app/repositories/*.js",
    "#models/*": "./app/models/*.js",
    "#services/*": "./app/services/*.js",
    "#listeners/*": "./app/listeners/*.js",
    "#events/*": "./app/events/*.js",
    "#middleware/*": "./app/middleware/*.js",
    "#validators/*": "./app/validators/*.js",
    "#providers/*": "./providers/*.js",
    "#policies/*": "./app/policies/*.js",
    "#utilities/*": "./app/utilities/*.js",
    "#database/*": "./database/*.js",
    "#start/*": "./start/*.js",
    "#tests/*": "./tests/*.js",
    "#config/*": "./config/*.js"
  },
  "dependencies": {
    "@adonisjs/core": "^6.19.1",
    "@adonisjs/lock": "^1.1.1",
    "@adonisjs/redis": "^9.2.0",
    "http-status-codes": "^2.3.0",
    "nanoid": "^5.1.6",
    "openai": "^6.8.1",
    "parse-duration": "^2.1.4",
    "reflect-metadata": "^0.2.2",
    "slugify": "^1.6.6",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@adonisjs/assembler": "^7.8.2",
    "@adonisjs/eslint-config": "^2.1.2",
    "@adonisjs/prettier-config": "^1.4.5",
    "@adonisjs/tsconfig": "^1.4.1",
    "@japa/assert": "^4.1.1",
    "@japa/plugin-adonisjs": "^4.0.0",
    "@japa/runner": "^4.4.0",
    "@swc/core": "1.15.0",
    "@types/node": "^22.15.18",
    "eslint": "^9.39.1",
    "hot-hook": "^0.4.0",
    "prettier": "^3.6.2",
    "ts-node-maintained": "^10.9.6",
    "typescript": "^5.9.3"
  },
  "hotHook": {
    "boundaries": [
      "./app/controllers/**/*.ts",
      "./app/middleware/*.ts"
    ]
  },
  "eslintConfig": {
    "extends": "@adonisjs/eslint-config/app"
  },
  "prettier": "@adonisjs/prettier-config"
}
